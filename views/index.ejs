<%- include('./partials/header') %>
<div class="container text-center text-dark">
    <div class="row">
        <div class="col-md-6">
            <% results.forEach(result=>{ %>
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <h4 class="well"><%= result.title %></h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="image">
                        <img src="<%= result.image %>" class="img-responsive" alt="Image">
                    </div>
                    <p class="meta date"><%= result.created.toDateString() %> </p>
                    <hr />

                    <p><%= result.info %></p>
                </div>
                <div class="card-footer">
                    <a href="/edit/<%= result._id %>" class="ui orange left floated button"><i
                            class="fas fa-edit fa-3"></i></a>

                    <a href="/delete/<%= result._id %>" class="ui red right floated button"><i
                            class="fas fa-trash fa-3"></i></a>


                </div>
            </div>
            <% })%>
        </div>
    </div>
</div>



<%- include('./partials/footer') %>